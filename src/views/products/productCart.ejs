    <%- include ('../partials/footer') %>

    <script>
        const add = document.querySelector(".add"),
        out = document.querySelector(".out"),
        num = document.querySelector(".num");
        let a = 1;
        add.addEventListener("click", ()=>{
          a++;
          num.innerText = a;
        });
        out.addEventListener("click", ()=>{
          if (a > 1) {
            a--;
            num.innerText = a;
          }
        });
      </script>
