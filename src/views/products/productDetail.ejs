                        <% for(let i=0;i< 3; i++){ let product=products[i] %>
                            <a href="/products/<%=product.id%>/detail">
                                <article>
                                    <img src="/images/<%= product.image %>" alt="<%=product.name%>">
                                    <div class="product-details">
                                        <p class="category">
                                            <%= product.petType %>
                                        </p>
                                        <p class="product-name">
                                            <%= product.name %>
                                        </p>
                                        <p class="price">$<%= product.price %>
                                        </p>
                                    </div>
                                </article>
                            </a>
                            <% } %>
                </div>
